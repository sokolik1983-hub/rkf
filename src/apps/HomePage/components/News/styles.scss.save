.recent-news {
  display: flex;
  flex-flow: row nowrap;
  margin: 80px 0;
  h2{
    font-size: 38px;
    line-height: 42px;
    margin: 0;
    padding: 0;
  }
  &__left-block {
    min-width: 784px;
    margin-right: 32px;

    .block {
      background-color: #BABFC7;
      position: relative;
      flex: 1;
      font-size: 24px;
      line-height: 32px;
      font-weight: 400;
      background-size: cover;
      background-position: center;
      &__title {
        box-sizing: border-box;
        position: absolute;
        display: flex;
        width: 100%;
        height: 100%;
        bottom: 0;
        left: 0;
        padding: 16px 24px;
        color: white;
        background: linear-gradient(360deg, rgba(0, 6, 19, 0.5) 11.08%, rgba(255, 255, 255, 0) 97.82%);
        align-items: flex-end;
      }

      &__row {
        display: flex;
        flex-flow: row nowrap;
      }

      &__primary-block {
        //background-color: #00CF53;
        min-height: 380px;
        margin-bottom: 32px;

      }

      &__secondary-block,
      &__third-block {
        //background-color: #1a63df;
        max-width: 376px;
        margin-right: 32px;
        min-height: 192px;
      }

      &__third-block {
        margin-right: 0;
      }
    }
  }
}

.recent-news {
  &__right-block {
    .list-item {
      display: flex;
      flex-flow: row nowrap;
      margin: 32px 0;

      &__image {
        min-width: 90px;
        min-height: 90px;
        max-width: 90px;
        max-height: 90px;
        background-color: #BABFC7;
        margin-right: 12px;
        background-position: center;
        background-size: cover;
        background-repeat: no-repeat;
      }
      &__category{
        font-size: 14px;
        line-height: 16px;
        color: #9DAFBD;
        font-weight: 400;
        letter-spacing: .3px;
        text-transform: uppercase;
      }
      &__title{
        font-size: 16px;
        line-height: 20px;
      }
    }
  }
}


